<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<sheetTitle>Settings</sheetTitle>
				<type>array</type>
				<el>
					<settings.consent.contentByUid>
						<label>Content Consent (loaded by Ajax)</label>
						<config>
							<type>group</type>
							<allowed>tt_content</allowed>
							<foreign_table>tt_content</foreign_table>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>1</minitems>
						</config>
					</settings.consent.contentByUid>

					<settings.consent.text>
						<label>Text</label>
						<description>information for the consent</description>
						<config>
							<type>text</type>
							<enableRichtext>true</enableRichtext>
						</config>
					</settings.consent.text>

					<settings.consent.button>
						<label>Button Text</label>
						<config>
							<checkbox>0</checkbox>
							<default>Load content</default>
							<type>input</type>
							<size>20</size>
						</config>
					</settings.consent.button>

					<settings.consent.buttonStyle>
						<label>Button Style </label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items type="array">
								<numIndex index="0">
									<label>Secondary</label>
									<value>secondary</value>
								</numIndex>
								<numIndex index="1">
									<label>Primary</label>
									<value>primary</value>
								</numIndex>
								<numIndex index="2">
									<label>Success</label>
									<value>success</value>
								</numIndex>
								<numIndex index="3">
									<label>Info</label>
									<value>info</value>
								</numIndex>
								<numIndex index="4">
									<label>Warning</label>
									<value>warning</value>
								</numIndex>
								<numIndex index="5">
									<label>Danger</label>
									<value>danger</value>
								</numIndex>
								<numIndex index="6">
									<label>Dark</label>
									<value>dark</value>
								</numIndex>
								<numIndex index="7">
									<label>light</label>
									<value>light</value>
								</numIndex>
								<numIndex index="8">
									<label>Link</label>
									<value>link</value>
								</numIndex>
							</items>
							<default>danger</default>
						</config>
					</settings.consent.buttonStyle>

					<settings.consent.extraClass>
						<label>Extra Class</label>
						<description>e.g. "bg-info" for background color (Bootstrap) - or what ever</description>
						<config>
							<checkbox>0</checkbox>
							<type>input</type>
							<size>20</size>
						</config>
					</settings.consent.extraClass>

					<settings.consent.cookie>
						<label>Set cookie if approved</label>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</settings.consent.cookie>

					<settings.consent.defaultThumbnail>
						<label>Default thumbnail from YouTube, Vimeo or Content Element</label>
						<description>only if available and "Thumbnail" is not set</description>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</settings.consent.defaultThumbnail>

					<settings.consent.thumbnail>
						<label>Thumbnail (background-image)</label>
						<config>
							 <type>file</type>
							 <maxitems>1</maxitems>
							 <allowed>common-image-types</allowed>
						</config>
					</settings.consent.thumbnail>

					<settings.consent.height>
						<label>Min. height of the consent area or background-image (in px)</label>
						<config>
							<type>number</type>
							<checkbox>0</checkbox>
							<size>6</size>
							<default>60</default>
						</config>
					</settings.consent.height>

					<settings.consent.autoSize>
						<label>Auto size (aspect ratio) for consent area or background-image</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items type="array">
								<numIndex index="0">
									<label>none</label>
									<value>0</value>
								</numIndex>
								<numIndex index="1">
									<label>1by1</label>
									<value>ratio ratio-1x1</value>
								</numIndex>
								<numIndex index="2">
									<label>4by3</label>
									<value>ratio ratio-4x3</value>
								</numIndex>
								<numIndex index="3">
									<label>16by9</label>
									<value>ratio ratio-16x9</value>
								</numIndex>
								<numIndex index="4">
									<label>21by9</label>
									<value>ratio ratio-21x9</value>
								</numIndex>
							</items>
							<default>ratio ratio-16x9</default>
						</config>
					</settings.consent.autoSize>

					<settings.consent.removeRatio>
						<label>Remove class "ratio" (if set) from "mainframe" after loading by ajax</label>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</settings.consent.removeRatio>

				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
